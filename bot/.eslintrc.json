{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 4],
        "eqeqeq": "off",
        "padded-blocks": "off",
        "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
        "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 0 }],
        "space-before-function-paren": "off"
    }
}
